<div class="card profile-view " style="margin-top: 30px;">
      <% User.where(role_id:2).each do |user| %>
           <div class="col-xs-12 col-sm-6 col-lg-6 col-md-6">
                            <div class="pv-header">
                               <%= image_tag user.photo.url(:small), :class => "style_image" , :style => 'margin-top: 57px;'%>
                            </div>
                            
                            <div class="pv-body">
                                <h2>
                                    <%=user.name%>
